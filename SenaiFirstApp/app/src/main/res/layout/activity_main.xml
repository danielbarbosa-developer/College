<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/firstNameText" android:hint="Your first name here"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/secondNameText" android:hint="Your last name here"/>
    <Button
            android:text="Show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/showButton" android:onClick="onClickShow"/>
    <Button
            android:text="Clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/clearButton" android:onClick="onClickClear"/>
</LinearLayout>